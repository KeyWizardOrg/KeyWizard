<Window
    x:Class="Key_Wizard.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Key_Wizard"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Title="Microsoft Key Wizard"
    Activated="Window_Activated">

    <Window.SystemBackdrop>
        <MicaBackdrop />
    </Window.SystemBackdrop>

    <Grid x:Name="MainGrid" 
          HorizontalAlignment="Stretch" 
          VerticalAlignment="Stretch"
          TabFocusNavigation="Cycle" 
          CornerRadius="{StaticResource OverlayCornerRadius}" 
          KeyDown="MainGrid_KeyDown">

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" x:Name="SearchRowDefinition"/>
            <RowDefinition Height="1*" x:Name="ResultsRowDefinition"/>
        </Grid.RowDefinitions>

        <!-- Search Box -->
        <Grid Grid.Row="0" 
              HorizontalAlignment="Stretch" 
              VerticalAlignment="Center"
              Height="48">
            <Grid.ColumnDefinitions>
                
                    <ColumnDefinition Width="Auto"/>
                    <!-- Search icon -->
                    <ColumnDefinition Width="*"/>
                    <!-- TextBox -->
                    <ColumnDefinition Width="Auto"/>
                    <!-- Clear button -->
                    <ColumnDefinition Width="Auto"/>
                    <!-- Voice button -->
                
            </Grid.ColumnDefinitions>

            <!-- Search Icon -->
            <FontIcon Grid.Column="0"
                      Glyph="&#xE71E;"
                      FontFamily="Segoe MDL2 Assets"
                      FontSize="16"
                      Margin="16,0,0,0"
                      VerticalAlignment="Center"
                      HorizontalAlignment="Center"
                      Foreground="{ThemeResource SystemAccentColor}"/>

                <!-- TextBox -->
            <TextBox Grid.Column="1"
                     x:Name="searchTextBox"
                     PlaceholderText="Key Wizard"
                     HorizontalAlignment="Stretch"
                     VerticalAlignment="Center"
                     FontSize="16"
                     Padding="8,4"
                     Background="Transparent"
                     TextWrapping="Wrap"
                     HorizontalContentAlignment="Center"
                     VerticalContentAlignment="Center"
                     KeyDown="searchTextBox_KeyDown"
                     TextChanged="searchTextBox_TextChanged"
                     BorderThickness="0">
                <TextBox.Style>
                    <Style TargetType="TextBox" BasedOn="{StaticResource DefaultTextBoxStyle}">
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="TextBox">
                                    <Grid>
                                        <VisualStateManager.VisualStateGroups>
                                            <VisualStateGroup x:Name="CommonStates">
                                                <VisualState x:Name="Normal"/>
                                                <VisualState x:Name="Focused">
                                                    <Storyboard/>
                                                </VisualState>
                                            </VisualStateGroup>
                                        </VisualStateManager.VisualStateGroups>
                                        <ScrollViewer x:Name="ContentElement"
                                                    Padding="{TemplateBinding Padding}"
                                                    Background="{TemplateBinding Background}"
                                                    BorderThickness="0"
                                                    IsTabStop="False"
                                                    HorizontalContentAlignment="{TemplateBinding HorizontalContentAlignment}"
                                                    VerticalContentAlignment="{TemplateBinding VerticalContentAlignment}"
                                                    HorizontalScrollBarVisibility="Disabled"
                                                    VerticalScrollBarVisibility="Disabled"/>
                                    </Grid>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                    </Style>
                </TextBox.Style>
            </TextBox>

            <Button Grid.Column="2"
                    x:Name="ClearSearchButton"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Margin="0,0,8,0"
                    Background="Transparent"
                    BorderBrush="Transparent"
                    Click="ClearSearchButton_Click"
                    Visibility="Collapsed">
                            <Button.Style>
                                <Style TargetType="Button" BasedOn="{StaticResource DefaultButtonStyle}">
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="Button">
                                                <Grid x:Name="RootGrid" Background="{TemplateBinding Background}">
                                                    <VisualStateManager.VisualStateGroups>
                                                        <VisualStateGroup x:Name="CommonStates">
                                                            <VisualState x:Name="Normal"/>
                                                            <VisualState x:Name="PointerOver">
                                                                <!-- Empty state to prevent hover color change -->
                                                                
                                                            </VisualState>
                                                            <VisualState x:Name="Pressed">
                                                                <!-- You can customize the pressed state if needed -->
                                                            </VisualState>
                                                        </VisualStateGroup>
                                                    </VisualStateManager.VisualStateGroups>
                                                    <ContentPresenter x:Name="ContentPresenter"
                                                    Content="{TemplateBinding Content}"
                                                    ContentTemplate="{TemplateBinding ContentTemplate}"
                                                    HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                                    VerticalAlignment="{TemplateBinding VerticalContentAlignment}"
                                                    Padding="{TemplateBinding Padding}"/>
                                                </Grid>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                </Style>
                            </Button.Style>
                <FontIcon Glyph="&#xE711;" 
                         Foreground="{ThemeResource SystemAccentColor}"
                          FontSize="12"
                         HorizontalAlignment="Center"
                         VerticalAlignment="Center"/>
            </Button>

            <Button Grid.Column="3"
                    x:Name="Listen"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Margin="0,0,8,0"
                    Background="Transparent"
                    BorderBrush="Transparent"
                    Click="VoiceInput">
                <Button.Style>
                    <Style TargetType="Button" BasedOn="{StaticResource DefaultButtonStyle}">
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="Button">
                                    <Grid x:Name="RootGrid" Background="{TemplateBinding Background}">
                                        <VisualStateManager.VisualStateGroups>
                                            <VisualStateGroup x:Name="CommonStates">
                                                <VisualState x:Name="Normal"/>
                                                <VisualState x:Name="PointerOver">
                                                    <!-- Empty state to prevent hover color change -->
                                                </VisualState>
                                                <VisualState x:Name="Pressed">
                                                    <!-- You can customize the pressed state if needed -->
                                                </VisualState>
                                            </VisualStateGroup>
                                        </VisualStateManager.VisualStateGroups>
                                        <ContentPresenter x:Name="ContentPresenter"
                                                        Content="{TemplateBinding Content}"
                                                        ContentTemplate="{TemplateBinding ContentTemplate}"
                                                        HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                                        VerticalAlignment="{TemplateBinding VerticalContentAlignment}"
                                                        Padding="{TemplateBinding Padding}"/>
                                    </Grid>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                    </Style>
                </Button.Style>
                <FontIcon x:Name="ListenIcon"
                         Glyph="&#xF781;" 
                         Foreground="{ThemeResource SystemAccentColor}"
                         HorizontalAlignment="Center"
                         VerticalAlignment="Center"/>
            </Button>
            
        </Grid>
        <!-- Results Area -->
        <Grid Grid.Row="1">
            <Rectangle Height="1"
                       x:Name="ResultsBorderBar"
                       Visibility="Collapsed"
                       Fill="{ThemeResource SystemControlForegroundBaseMediumLowBrush}"
                       HorizontalAlignment="Stretch"
                       VerticalAlignment="Top" />

            <ScrollViewer VerticalScrollBarVisibility="Auto" 
                        Margin="0,8,0,4" 
                        VerticalAlignment="Stretch">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="2.5*"/>
                        <ColumnDefinition Width="3*"/>
                    </Grid.ColumnDefinitions>
                    <ListView x:Name="shortcutsList"
                        Margin="8,4,0,0"
                        SelectionMode="None"
                        XYFocusKeyboardNavigation="Enabled"
                        BorderThickness="0">
                        <ListView.ItemTemplate>
                            <DataTemplate x:DataType="local:Category">
                                <StackPanel Margin="0,0,0,0">
                                    <TextBlock Text="{x:Bind Name}"
                                        FontWeight="SemiBold"
                                        FontSize="14"
                                        Margin="0,0,0,4"/>
                                    <ListView ItemsSource="{x:Bind Shortcuts}"
                                              SelectionMode="Single"
                                              KeyDown="ListView_KeyDown"
                                              IsItemClickEnabled="True"
                                              ItemClick="ListView_ItemClick"
                                              BorderThickness="0">
                                        <ListView.ItemTemplate>
                                            <DataTemplate x:DataType="local:Shortcut">
                                                <TextBlock Margin="0,0,0,0" Loaded="TextBlock_Loaded" FontSize="14">
                                                </TextBlock>
                                            </DataTemplate>
                                        </ListView.ItemTemplate>
                                        <ListView.ItemContainerStyle>
                                            <Style TargetType="ListViewItem">
                                                <Setter Property="Background" Value="Transparent"/>
                                                <Setter Property="BorderBrush" Value="Transparent"/>
                                                <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                                                <Setter Property="Margin" Value="0"/>
                                            </Style>
                                        </ListView.ItemContainerStyle>
                                    </ListView>
                                </StackPanel>
                            </DataTemplate>
                        </ListView.ItemTemplate>
                    </ListView>

                    <!-- Key Combination ListView -->
                    <ListView Grid.Column="1"
                    x:Name="keyList"
                    Margin="0,4,8,8"
                    SelectionMode="None"
                    BorderThickness="0">
                        <ListView.ItemTemplate>
                            <DataTemplate x:DataType="local:Category">
                                <StackPanel Margin="0,0,0,0">
                                    <TextBlock Text="{x:Bind Name}"
                                    FontWeight="SemiBold"
                                    FontSize="14"
                                    Margin="0,0,0,4"/>
                                    <ListView ItemsSource="{x:Bind Shortcuts}"
                                    SelectionMode="None"
                                    BorderThickness="0">
                                        <ListView.ItemTemplate>
                                            <DataTemplate x:DataType="local:Shortcut">
                                                <Grid Margin="4,2">
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="Auto"/>
                                                        <ColumnDefinition Width="Auto"/>
                                                        <ColumnDefinition Width="Auto"/>
                                                    </Grid.ColumnDefinitions>

                                                    <!-- Key 1 -->
                                                    <Border Grid.Column="0"
                                                            BorderBrush="{ThemeResource SystemControlForegroundBaseMediumLowBrush}"
                                                            BorderThickness="1"
                                                            CornerRadius="4"
                                                            Margin="6,2"
                                                            Padding="6,2">
                                                        <TextBlock Text="{x:Bind DisplayKeys[0], Mode=OneWay}"
                                                                   HorizontalAlignment="Center"
                                                                   FontWeight="SemiBold"
                                                                   Loaded="TextBlock_Loaded"/>
                                                    </Border>

                                                    <!-- Key 2 -->
                                                    <Border Grid.Column="1"
                                                            BorderBrush="{ThemeResource SystemControlForegroundBaseMediumLowBrush}"
                                                            BorderThickness="1"
                                                            CornerRadius="4"
                                                            Margin="6,2"
                                                            Padding="6,2">
                                                        <TextBlock Text="{x:Bind DisplayKeys[1], Mode=OneWay}"
                                                                   HorizontalAlignment="Center"
                                                                   FontWeight="SemiBold"
                                                                   Loaded="TextBlock_Loaded"/>
                                                    </Border>

                                                    <!-- Key 3 -->
                                                    <Border 
                                                            Grid.Column="2"
                                                            BorderBrush="{ThemeResource SystemControlForegroundBaseMediumLowBrush}"
                                                            BorderThickness="1"
                                                            CornerRadius="4"
                                                            Margin="6,2"
                                                            Padding="6,2">
                                                        <TextBlock Text="{x:Bind DisplayKeys[2], Mode=OneWay}"
                                                                   HorizontalAlignment="Center"
                                                                   FontWeight="SemiBold"
                                                                   Loaded="TextBlock_Loaded"/>
                                                    </Border>
                                                </Grid>
                                            </DataTemplate>
                                        </ListView.ItemTemplate>
                                        <ListView.ItemContainerStyle>
                                            <Style TargetType="ListViewItem">
                                                <Setter Property="Background" Value="Transparent"/>
                                                <Setter Property="BorderBrush" Value="Transparent"/>
                                                <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                                                <Setter Property="Margin" Value="0"/>
                                            </Style>
                                        </ListView.ItemContainerStyle>
                                    </ListView>
                                </StackPanel>
                            </DataTemplate>
                        </ListView.ItemTemplate>
                    </ListView>
                </Grid>
            </ScrollViewer>
        </Grid>
    </Grid>
</Window>