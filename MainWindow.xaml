<Window
    x:Class="Key_Wizard.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Key_Wizard"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Title="Microsoft Key Wizard">

    <Grid x:Name="MainGrid" HorizontalAlignment="Stretch" Margin="10" TabFocusNavigation="Cycle">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <Grid.Resources>
            <!-- Define Window Dimensions -->
            <x:Int32 x:Key="WindowWidth">500</x:Int32>
            <x:Int32 x:Key="WindowHeight">10</x:Int32>
        </Grid.Resources>

        <Grid Grid.Row="0" HorizontalAlignment="Stretch">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="3*"/>
                <!-- 75% -->
                <ColumnDefinition Width="1*"/>
                <!-- 25% -->
            </Grid.ColumnDefinitions>

            <TextBox x:Name="searchTextBox"
                    Grid.Column="0"
                    PlaceholderText="KeyWizard"
                    HorizontalAlignment="Stretch"
                    VerticalAlignment="Center"
                    Margin="0,0,5,0"/>

            <Button x:Name="myButton"
                   Grid.Column="1"
                   Content="Search"
                   HorizontalAlignment="Left"
                   VerticalAlignment="Bottom"
                   Click="myButton_Click"/>
        </Grid>

        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <ListView x:Name="shortcutsList"
                      Margin="5"
                      Visibility="Collapsed"
                      XYFocusKeyboardNavigation="Enabled"
                      SelectionChanged="shortcutsList_SelectionChanged">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <TextBlock Text="{Binding}" Padding="8"/>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </ScrollViewer>
    </Grid>
</Window>