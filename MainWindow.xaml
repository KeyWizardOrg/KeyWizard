<Window
    x:Class="Key_Wizard.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Key_Wizard"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Title="Microsoft Key Wizard"
    Activated="Window_Activated">

    <Window.SystemBackdrop>
        <MicaBackdrop />
    </Window.SystemBackdrop>

    <Grid x:Name="MainGrid" 
          HorizontalAlignment="Stretch" 
          VerticalAlignment="Stretch"
          TabFocusNavigation="Cycle" 
          CornerRadius="{StaticResource OverlayCornerRadius}" 
          KeyDown="MainGrid_KeyDown">

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" x:Name="SearchRowDefinition"/>
            <RowDefinition Height="1*" x:Name="ResultsRowDefinition"/>
        </Grid.RowDefinitions>

        <!-- Search Box -->
        <Grid Grid.Row="0" 
              HorizontalAlignment="Stretch" 
              VerticalAlignment="Center"
              Height="48">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <!-- Search Icon -->
            <FontIcon Grid.Column="0"
                      Glyph="&#xE71E;"
                      FontFamily="Segoe MDL2 Assets"
                      FontSize="16"
                      Margin="16,0,0,0"
                      VerticalAlignment="Center"
                      HorizontalAlignment="Center"
                      Foreground="{ThemeResource SystemAccentColor}"/>

                <!-- TextBox -->
            <TextBox Grid.Column="1"
                     x:Name="searchTextBox"
                     PlaceholderText="Key Wizard"
                     HorizontalAlignment="Stretch"
                     VerticalAlignment="Center"
                     FontSize="16"
                     Padding="8,4"
                     Background="Transparent"
                     TextWrapping="Wrap"
                     HorizontalContentAlignment="Center"
                     VerticalContentAlignment="Center"
                     TextChanged="searchTextBox_TextChanged"
                     BorderThickness="0">
                <TextBox.Style>
                    <Style TargetType="TextBox" BasedOn="{StaticResource DefaultTextBoxStyle}">
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="TextBox">
                                    <Grid>
                                        <VisualStateManager.VisualStateGroups>
                                            <VisualStateGroup x:Name="CommonStates">
                                                <VisualState x:Name="Normal"/>
                                                <VisualState x:Name="Focused">
                                                    <Storyboard/>
                                                </VisualState>
                                            </VisualStateGroup>
                                        </VisualStateManager.VisualStateGroups>
                                        <ScrollViewer x:Name="ContentElement"
                                                    Padding="{TemplateBinding Padding}"
                                                    Background="{TemplateBinding Background}"
                                                    BorderThickness="0"
                                                    IsTabStop="False"
                                                    HorizontalContentAlignment="{TemplateBinding HorizontalContentAlignment}"
                                                    VerticalContentAlignment="{TemplateBinding VerticalContentAlignment}"
                                                    HorizontalScrollBarVisibility="Disabled"
                                                    VerticalScrollBarVisibility="Disabled"/>
                                    </Grid>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                    </Style>
                </TextBox.Style>
            </TextBox>

            <Button Grid.Column="2"
                    x:Name="Listen"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Margin="0,0,8,0"
                    Background="Transparent"
                    BorderBrush="Transparent"
                    Click="VoiceInput">
                            <Button.Style>
                                <Style TargetType="Button" BasedOn="{StaticResource DefaultButtonStyle}">
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="Button">
                                                <Grid x:Name="RootGrid" Background="{TemplateBinding Background}">
                                                    <VisualStateManager.VisualStateGroups>
                                                        <VisualStateGroup x:Name="CommonStates">
                                                            <VisualState x:Name="Normal"/>
                                                            <VisualState x:Name="PointerOver">
                                                                <!-- Empty state to prevent hover color change -->
                                                            </VisualState>
                                                            <VisualState x:Name="Pressed">
                                                                <!-- You can customize the pressed state if needed -->
                                                            </VisualState>
                                                        </VisualStateGroup>
                                                    </VisualStateManager.VisualStateGroups>
                                                    <ContentPresenter x:Name="ContentPresenter"
                                                        Content="{TemplateBinding Content}"
                                                        ContentTemplate="{TemplateBinding ContentTemplate}"
                                                        HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                                        VerticalAlignment="{TemplateBinding VerticalContentAlignment}"
                                                        Padding="{TemplateBinding Padding}"/>
                                                </Grid>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                </Style>
                            </Button.Style>
                            <FontIcon x:Name="ListenIcon"
                         Glyph="&#xF781;" 
                         Foreground="{ThemeResource SystemAccentColor}"
                         HorizontalAlignment="Center"
                         VerticalAlignment="Center"/>
            </Button>
        </Grid>
        <!-- Results Area -->
        <Grid Grid.Row="1">
            <Rectangle Height="1"
                       x:Name="ResultsBorderBar"
                       Visibility="Collapsed"
                       Fill="{ThemeResource SystemControlForegroundBaseMediumLowBrush}"
                       HorizontalAlignment="Stretch"
                       VerticalAlignment="Top" />

            <ScrollViewer VerticalScrollBarVisibility="Auto" 
                        Margin="0,8,0,4" 
                        VerticalAlignment="Stretch">
                <ListView x:Name="shortcutsList"
                        Margin="8,4,8,8"
                        SelectionMode="None"
                        XYFocusKeyboardNavigation="Enabled"
                        SizeChanged="shortcutsList_SizeChanged"
                        BorderThickness="0">
                    <ListView.ItemTemplate>
                        <DataTemplate x:DataType="local:Section">
                            <StackPanel Margin="0,0,0,0">
                                <TextBlock Text="{x:Bind Name}"
                                        FontWeight="SemiBold"
                                        FontSize="12"
                                        Margin="0,0,0,4"/>
                                <ListView ItemsSource="{x:Bind Items}"
                                        SelectionMode="Single"
                                        KeyDown="ListView_KeyDown"
                                        IsItemClickEnabled="True"
                                        ItemClick="ListView_ItemClick"
                                        BorderThickness="0">
                                    <ListView.ItemTemplate>
                                        <DataTemplate x:DataType="local:ListItem">
                                            <TextBlock Margin="0,0,0,0" Loaded="TextBlock_Loaded">
                                                </TextBlock>
                                        </DataTemplate>
                                    </ListView.ItemTemplate>
                                    <ListView.ItemContainerStyle>
                                        <Style TargetType="ListViewItem">
                                            <Setter Property="Background" Value="Transparent"/>
                                            <Setter Property="BorderBrush" Value="Transparent"/>
                                            <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                                            <Setter Property="Margin" Value="0"/>
                                        </Style>
                                    </ListView.ItemContainerStyle>
                                </ListView>
                            </StackPanel>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>
            </ScrollViewer>
        </Grid>
    </Grid>
</Window>