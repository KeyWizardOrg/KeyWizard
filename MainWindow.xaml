<?xml version="1.0" encoding="utf-8"?>
<Window
    x:Class="Frontend_Button.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Frontend_Button"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Title="Frontend Button">

    <Grid Margin="10">
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" VerticalAlignment="Top">
            <TextBox x:Name="searchTextBox" Header="Search Bar: " PlaceholderText="Enter action here"></TextBox>
            <Button x:Name="myButton" Click="myButton_Click">Click Me</Button>
            <ListView x:Name="shortcutsList" Margin="5,5,5,5" Visibility="Collapsed">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <TextBlock Text="{Binding}"/>
                    </DataTemplate>
                </ListView.ItemTemplate>
                <ListView.Items>
                    <x:String>Action 1: Shortcut 1</x:String>
                    <ListViewItem>Action 2: Shortcut 2</ListViewItem>
                </ListView.Items>
            </ListView>
        </StackPanel>
    </Grid>
</Window>
